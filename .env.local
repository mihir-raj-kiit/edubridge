# NEXT_PUBLIC_USE_MOCK_DATA=false
# NEXT_PUBLIC_ENABLE_BACKEND_CHECK=true
# NEXT_PUBLIC_ENABLE_GROQ=true

# For development without backend issues, leave the defaults as they are above
